<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tutorial_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcl">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bgcl"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/icon_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:src="@drawable/nyg_icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </RelativeLayout>
    </RelativeLayout>

    <com.bosphere.fadingedgelayout.FadingEdgeLayout
        android:id="@+id/fading_edge_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="95sp"
        android:layout_marginTop="60dp"
        app:fel_edge="top|bottom"
        app:fel_size_top="15dp"
        app:fel_size_bottom="15dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tutorial_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </com.bosphere.fadingedgelayout.FadingEdgeLayout>

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="95sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/barMid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/nul" />

        <RelativeLayout
            android:id="@+id/barL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_toStartOf="@+id/barMid"
            android:layout_toLeftOf="@+id/barMid"
            android:background="@color/nul">

            <Button
                android:id="@+id/home_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/nul" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_icon_2" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:text="首頁"
                android:textAlignment="center"
                android:textSize="15sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/barR"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/barL"
            android:layout_toRightOf="@+id/barL"
            android:background="@color/nul">

            <Button
                android:id="@+id/tut_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/nul" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="38dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/tutorial_icon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:text="教學"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>