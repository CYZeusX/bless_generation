<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="95sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bar">

            <RelativeLayout
                android:id="@+id/barMid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/nul"/>

            <RelativeLayout
                android:id="@+id/barL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/barMid"
                android:layout_toLeftOf="@+id/barMid"
                android:background="@color/nul">

                <Button
                    android:id="@+id/home_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/nul" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="22dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/home_icon" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:text="首頁"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/barR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_toEndOf="@+id/barL"
                android:layout_toRightOf="@+id/barL"
                android:background="@color/nul">

                <Button
                    android:id="@+id/tut_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/nul"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="38dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/tutorial_icon_2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/imageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:text="教學"
                    android:textAlignment="center"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bar"
            android:layout_below="@+id/ctrlPad"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/generate_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/bgcl"
                android:hapticFeedbackEnabled="true"
                android:paddingTop="0dp"
                android:text="@string/generate"
                android:textColor="@color/hint"
                android:textSize="50dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ctrlPad"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ctrlPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/upper"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/icon_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/nyg_icon" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="354dp"
                android:layout_height="324dp"
                android:layout_below="@+id/icon_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/show_button"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="-6dp"
                    android:hapticFeedbackEnabled="true"
                    android:text="@string/show_greets"
                    android:backgroundTint="@color/btnB"
                    android:textColor="@color/bgcl"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/generate_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/generate_button"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                    app:shapeAppearanceOverlay="@style/show"/>

                <Button
                    android:id="@+id/emojiAdd"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/show_button"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="-6dp"
                    android:backgroundTint="@color/btnB"
                    android:outlineSpotShadowColor="@color/bgc"
                    android:shadowColor="@color/greets"
                    android:shadowRadius="60"
                    android:text="@string/emoji"
                    android:textAlignment="center"
                    android:textColor="@color/tick"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
                    app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
                    app:layout_constraintStart_toStartOf="@+id/relativeLayout"
                    app:layout_constraintTop_toTopOf="@+id/relativeLayout"
                    app:shapeAppearanceOverlay="@style/emoji_btn" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edittext_custom"
                    android:hint="@string/name_hint"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingStart="26dp"
                    android:paddingLeft="26dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ScrollView
                    android:id="@+id/showGreet_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="245dp"
                    android:layout_below="@+id/name"
                    android:layout_alignStart="@+id/relativeLayout"
                    android:layout_alignEnd="@+id/relativeLayout"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="false"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/textview"
                    app:layout_constraintBottom_toTopOf="@+id/name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/greets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview"
                        android:text="@string/tutorial"
                        android:textColor="@color/gray"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:textSize="33sp"
                        app:layout_constraintBottom_toTopOf="@+id/name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </ScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cpyCnvt"
                android:layout_width="367dp"
                android:layout_height="74dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignStart="@+id/relativeLayout"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignEnd="@+id/relativeLayout"
                android:layout_alignRight="@+id/relativeLayout"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/nul"
                app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
                app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="@+id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                app:layout_constraintVertical_bias="0.04">

                <Button
                    android:id="@+id/copy"
                    android:layout_width="183.5dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_toStartOf="@+id/convert_btn"
                    android:layout_toLeftOf="@+id/convert_btn"
                    android:backgroundTint="@color/greets"
                    android:paddingStart="30dp"
                    android:text="@string/copy"
                    android:textColor="@color/bgcl"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/relativeLayout"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                    app:shapeAppearanceOverlay="@style/copy" />

                <Button
                    android:id="@+id/convert_btn"
                    android:layout_width="183.5dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:backgroundTint="@color/greets"
                    android:text="@string/convert"
                    android:textColor="@color/bgcl"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                    app:shapeAppearanceOverlay="@style/convert" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ranks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cpyCnvt"
                android:layout_alignStart="@+id/relativeLayout"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignEnd="@+id/relativeLayout"
                android:layout_alignRight="@+id/relativeLayout"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:paddingTop="25dp">

                <Button
                    android:id="@+id/rank1"
                    android:layout_width="120dp"
                    android:layout_height="67dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="11dp"
                    android:layout_toStartOf="@id/rank2"
                    android:backgroundTint="@color/set3"
                    android:text="@string/junior"
                    android:textAlignment="center"
                    android:textColor="@color/btnBg"
                    android:textSize="20sp"
                    app:shapeAppearanceOverlay="@style/rank1" />

                <Button
                    android:id="@+id/rank2"
                    android:layout_width="120dp"
                    android:layout_height="67dp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/set3"
                    android:text="@string/medior"
                    android:textAlignment="center"
                    android:textColor="@color/btnBg"
                    android:textSize="20sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/rank3"
                    android:layout_width="120dp"
                    android:layout_height="67dp"
                    android:layout_alignTop="@+id/rank2"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_toEndOf="@+id/rank2"
                    android:layout_toRightOf="@+id/rank2"
                    android:backgroundTint="@color/set3"
                    android:text="@string/senior"
                    android:textAlignment="center"
                    android:textColor="@color/btnBg"
                    android:textSize="20sp"
                    app:shapeAppearanceOverlay="@style/rank3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ranks"
                android:layout_alignStart="@+id/relativeLayout"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignEnd="@+id/relativeLayout"
                android:layout_alignRight="@+id/relativeLayout"
                android:layout_alignBottom="@+id/ctrlPad"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp">

                <Spinner
                    android:id="@+id/festival"
                    android:layout_width="120dp"
                    android:layout_height="57dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/spinner"
                    android:popupBackground="@drawable/spinpop"
                    android:spinnerMode="dropdown"/>

                <Spinner
                    android:id="@+id/stage_spinner"
                    android:layout_width="120dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/spinner"
                    android:popupBackground="@drawable/spinpop"
                    android:spinnerMode="dropdown"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
